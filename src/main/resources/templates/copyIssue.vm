    <body>
      <div class="row" style="margin-top: 15px;"></div>
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <h3>Welcome to agile projects cloner</h3>
          <p style="margin-top: 20px;">Agile Project Cloner is here to help you clone tasks from one single project and copy them to another project in your JIRA Cloud Instance. Please note that the tasks you will copy and move to another project will still remain in your original project therefore you can easily progress any work on them and on the project. </p>
	        <div class="row">
		        <div class="col-md-1"></div>
		        <div class="col-md-10">
		          <p style="margin-top: 15px;">STEP 1 SELECT THE PROJECT FROM WHICH YOU WANT TO COPY TASKS</p>
		           <form class="aui">
    				 <p>
        				<aui-select id="sync-product-single-select" name="product" placeholder="From project">
        				#foreach($project in $projectList)
        					<aui-option id="$project.key">$project.name</aui-option>
        				#end
        				</aui-select>
    				 </p>
				    </form>
		        </div>
		        <div class="col-md-1"></div>
	        </div>
	        <div class="row">
		        <div class="col-md-1"></div>
		        <div class="col-md-10">
		          <p style="margin-top: 20px;">STEP 2 SELECT THE PROJECT TO WHICH YOU WANT TO PASTE TASKS</p>
		           <form class="aui">
    				 <p>
        				<aui-select id="sync-product-single-select" name="product" placeholder="To project">
        				#foreach($project in $projectList)
        					<aui-option>$project.name</aui-option>
        				#end
        				</aui-select>
    				 </p>
				    </form>
		         </div>
		         <div class="col-md-1"></div>
	         </div>
	         <div class="row">
		         <div class="col-md-1"></div>
		         <div class="col-md-10">
		          <p style="margin-top: 15px;"> STEP 3 SELECT ISSUE TYPES YOU WANT TO COPY </p>
		         </div>
		         <div class="col-md-1"></div>
	         </div>
	         
	         <div class="row" style="margin-top: 20px;">
	         	 <div class="col-md-2"></div>
		         <div class="col-md-8" style="margin-left: 65px;">
		         <button class="aui-button aui-button-primary" id="jQueryColorChange">TASKS</button>
		         <button class="aui-button aui-button-primary" id="jQueryColorChange">USER STORIES</button>
		         <button class="aui-button aui-button-primary" id="jQueryColorChange">FEATURE REQUESTS</button>
		         <button class="aui-button aui-button-primary" id="jQueryColorChange">BUGS</button>
		         <button class="aui-button aui-button-primary" id="jQueryColorChange">SUB TASKS</button>
		         </div>
		          <div class="col-md-2"></div>
	         </div>
	         	<div class="row" style="margin-top: 20px;">
	         	<form action="/copyissues" method="POST">
	         		<div class="col-md-3"></div>
	         		<div class="col-md-6">
	         		<table cellspacing="5">
	         		<tr>
	         		<td valign="middle" style="padding-right:30px">
	         		<p style="font-size:13px">I WANT TO COPY CUSTOM ISSUE TYPES </p>  
	         		</td>
	         		<td valign="middle">
	         		<button class="aui-button aui-button-primary" style="background:#E78270;">LOAD CUSTOM ISSUE</button>
	         		</td>
	         		</tr>
	         		<tr style="margin-top: 20px;">
	         		<td valign="middle">
	         		<p style="font-size:13px">I WANT TO COPY ALL OF ISSUES</p>
	         		</td>
	         		<td valign="middle">
	         		 <button class="aui-button aui-button-primary" style="background:#E78270;">LOAD ALL ISSUE</button>
	         		</td>
	         		</tr>
	         		</table>
	         		</div>
	       		</form>
	         	<div class="col-md-3"></div>
	         	</div>
        	</div>
        </div>
        <div class="col-md-1"></div>
      </div>
    <script id="connect-loader" data-options="sizeToParent:true;">
         (function() {
             var getUrlParam = function (param) {
                 var codedParam = (new RegExp(param + '=([^&]*)')).exec(window.location.search)[1];
                 return decodeURIComponent(codedParam);
             };

             var baseUrl = getUrlParam('xdm_e') + getUrlParam('cp');
             var options = document.getElementById('connect-loader').getAttribute('data-options');

             var script = document.createElement("script");
             script.src = baseUrl + '/atlassian-connect/all.js';

             if(options) {
                 script.setAttribute('data-options', options);
             }

             document.getElementsByTagName("head")[0].appendChild(script);
         })();
     </script>
     #foreach($commonIssueType in $commonIssueTypes)
        					$commonIssueType
        				#end
        				
        				#foreach($customIssueType in $customIssueTypes)
        					$customIssueType
        				#end
